{
  // Options for the generate-reference.php script
  "reference": {
    "src": "../src",
    "patterns": {
      "directories": ["Metadata", "OpenApi/Model"],
      "names": ["*Interface.php", "*Trait.php", "Configuration.php"],
      "exclude": ["*Factory.php"],
      "class-tags-to-ignore": ["@internal", "@experimental"]
    }
  },
  "sidebar": {
    "directories": {
      "Guides": ["pages/guide"],
      "Reference": ["pages/reference"]
    },
    // For URLs
    "basePath": "pages"
  }
}
